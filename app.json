{
  "name": "x402-real-earner",
  "description": "x402 revenue system with Solana payment integration",
  "repository": "https://github.com/devrixclaw/x402-real-earner",
  "logo": "https://docs.solana.com/img/branding/solana-logo-black.svg",
  "keywords": ["solana", "x402", "payment", "crypto", "content-monetization"],
  "env": {
    "SOLANA_NETWORK": {
      "description": "Solana network to use",
      "value": "devnet",
      "required": false
    },
    "MERCHANT_WALLET": {
      "description": "Solana wallet address to receive payments",
      "required": true
    },
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production",
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}